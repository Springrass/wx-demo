/* pages/detail/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}
.image{
  width:100%;
  height:450rpx;
}
.nav{
  margin: 10rpx 0;
}
.nav .name{
  font-size: 34rpx;
}
.nav image{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin:0 20rpx;
}
.nav .time{
  float: right;
  margin-right: 30rpx;
  font-size: 30rpx;
  color:#ccc;
  margin-top: 30rpx;
}
.detail_title{
  text-align: center;
}
.collection_share{
  position: relative;
  padding-right: 80rpx;
}
.collection_share image{
  float: right;
  width: 90rpx;
  height:90rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.line{
  position:absolute;
  width: 90%;
  height:2rpx;
  background: #ccc;
  left:5%;
  top:50%;
  z-index: -1;
}
.content{
  margin:10rpx 30rpx;
  text-indent: 2em;
  white-space:pre-wrap;
}
button{
  right:-32%;
  height:60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}