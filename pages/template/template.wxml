<!--pages/template/list-template.wxml-->
<template name='list-item'>
    <view class="avatar_data">
      <image src='{{avatar}}'></image>
      <text>{{date}}</text>
    </view>
    <text class="company">{{title}}</text>
    <image class="content_img" src="{{detail_img}}"></image>
    <text class="content">{{detail_brief}}</text>
    <view class="love_attention">
      <image src="/images/icon/none-star.png"></image>
      <text>{{love_count}}</text>
      <image src="/images/icon/view.png"></image>
      <text>{{attention_count}}</text>
    </view>
</template>
